set autoindent
set historylog
set indicator
set linenumbers
set matchbrackets "(<[{)>]}"
set tabsize 4
set tabstospaces

set titlecolor brightblue
set statuscolor brightred
set selectedcolor brightwhite,cyan
set numbercolor yellow
set keycolor brightblue
set functioncolor yellow

# Include nano syntax highlighting files
include ~/.dot/cfg/nano/default.nanorc
include ~/.dot/plugins/nano-syntax-highighting/*.nanorc
